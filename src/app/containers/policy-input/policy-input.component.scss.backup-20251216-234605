// ‚úÖ Estilos espec√≠ficos para stepper responsive usando tech-block-lib
.stepper-responsive {
  // ‚úÖ Aplicar clases de tech-block-lib para responsive design

  // ‚úÖ En desktop mantener tama√±o normal
  @media (min-width: 769px) {
    :deep(.p-stepper-nav) {
      flex-wrap: nowrap;

      .p-stepper-header {
        .p-stepper-title {
          font-size: 14px;
          line-height: 1.2;
          text-align: center;
          max-width: 150px;
          word-wrap: break-word;
        }
      }
    }
  }

  // ‚úÖ En tablets hacer texto m√°s compacto
  @media (max-width: 768px) and (min-width: 481px) {
    :deep(.p-stepper-nav) {
      .p-stepper-header {
        padding: 0.5rem 0.25rem;

        .p-stepper-title {
          font-size: 12px;
          line-height: 1.1;
          text-align: center;
          max-width: 120px;
          word-wrap: break-word;
        }

        .p-stepper-number {
          width: 24px;
          height: 24px;
          font-size: 12px;
          margin-bottom: 0.25rem;
        }
      }
    }
  }

  // ‚úÖ En mobile hacer stepper ultra compacto
  @media (max-width: 480px) {
    :deep(.p-stepper-nav) {
      justify-content: space-between;
      padding: 0 0.5rem;

      .p-stepper-header {
        flex: 1;
        padding: 0.25rem 0.125rem;
        min-width: 0; // ‚úÖ Permitir que se comprima

        .p-stepper-title {
          font-size: 10px;
          line-height: 1;
          text-align: center;
          max-width: 80px;
          word-wrap: break-word;
          margin-top: 0.25rem;
          // ‚úÖ Usar colores de tech-block-lib
          color: var(--c-lib-tb-grayscaleD200);
        }

        .p-stepper-number {
          width: 20px;
          height: 20px;
          font-size: 10px;
          margin: 0 auto 0.25rem;
          // ‚úÖ Usar colores de tech-block-lib
          background-color: var(--c-lib-tb-grayscaleL300);
          color: var(--c-lib-tb-grayscaleD100);
        }

        // ‚úÖ Estado activo con colores de tech-block-lib
        &.p-stepper-header-active {
          .p-stepper-number {
            background-color: var(--c-lib-tb-primaryBase);
            color: var(--c-lib-tb-grayscaleWhite);
          }

          .p-stepper-title {
            color: var(--c-lib-tb-primaryBase);
            font-weight: 600;
          }
        }

        // ‚úÖ Estado completado con colores de tech-block-lib
        &.p-stepper-header-completed {
          .p-stepper-number {
            background-color: var(--c-lib-tb-successBase);
            color: var(--c-lib-tb-grayscaleWhite);
          }

          .p-stepper-title {
            color: var(--c-lib-tb-successBase);
          }
        }
      }

      // ‚úÖ Ajustar separadores para mobile
      .p-stepper-separator {
        flex: 0 0 auto;
        width: 20px;
        margin: 0 0.125rem;

        .p-stepper-separator-line {
          background-color: var(--c-lib-tb-grayscaleL300);
          height: 1px;
          margin-top: 10px; // ‚úÖ Centrar con el n√∫mero del stepper
        }
      }
    }
  }
}

